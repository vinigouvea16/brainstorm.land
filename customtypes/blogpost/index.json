{
  "format": "page",
  "id": "blogpost",
  "label": "blogpost",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "heroimage": {
        "type": "Image",
        "config": {
          "label": "heroImage",
          "constraint": {
            "height": 780
          },
          "thumbnails": [
            {
              "name": "mobile",
              "width": null,
              "height": 570
            }
          ]
        }
      },
      "heroh1": {
        "type": "StructuredText",
        "config": {
          "label": "heroh1",
          "placeholder": "titulo do post por cima da imagem principal",
          "allowTargetBlank": false,
          "single": "heading1,heading2,rtl,strong,em"
        }
      },
      "contentparagraph1": {
        "type": "StructuredText",
        "config": {
          "label": "contentparagraph1",
          "placeholder": "texto do post",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "postcardimage": {
        "type": "Image",
        "config": {
          "label": "postcardimage",
          "constraint": {
            "width": 465,
            "height": 564
          },
          "thumbnails": []
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
